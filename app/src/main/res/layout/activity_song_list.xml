<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/global_padding"
    tools:context="com.example.android.musicappversion2.SongList">


    <!-- Layout for the classic music screen -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/song_list_comment" />


    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/global_padding"
        android:clickable="true"/>

    <Button
        android:id="@+id/bt_goToPlaySong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/play_screen_button"/>

</LinearLayout>
